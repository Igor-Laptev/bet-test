datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id          Int      @id @default(autoincrement())
  coefficient Float
  deadline    Int
  status      String
  bets        Bet[]
}

model Bet {
  id          Int   @id @default(autoincrement())
  eventId     Int
  event       Event     @relation(fields: [eventId], references: [id])
  amount      Float
  potentialWin Float
  status      String
}
