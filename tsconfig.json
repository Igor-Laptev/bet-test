{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@mocks/*": ["src/__mocks__/*"]
    }
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
